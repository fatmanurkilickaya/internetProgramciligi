    <script>
        "use strict";
        let sonuc;
        let gorevler = [
            { "id": 1, "gorevAdi": "Görev 1" },
            { "id": 2, "gorevAdi": "Görev 2" },
            { "id": 3, "gorevAdi": "Görev 3" },
            { "id": 4, "gorevAdi": "Görev 4" },
            { "id": 5, "gorevAdi": "Görev 5" },
            { "id": 6, "gorevAdi": "Görev 6" },
            { "id": 7, "gorevAdi": "Görev 7" }
        ]
        Gorevlistesi();

        function Gorevlistesi() {
            let ul = document.getElementById("task-list");
            ul.innerHTML = "";
            for (let gorev of gorevler) {
                let li = `<li class="task list-group-item">
                        <div class="form-check">
                            <input id="${gorev.id}" class="form-check-input" type="checkbox" value="" >
                            <label class="form-check-label" for="${gorev.id}">${gorev.gorevAdi}</label>
                        </div>
                        <i class="fa-solid fa-delete-left"></i>              
                   
</li>`;
                ul.insertAdjacentHTML("beforeend", li);

            }

        }


        document.querySelector("#btnAdd").addEventListener("click", newGorev);

        document.querySelector("#btnAdd").addEventListener
            ("keypress", function () {
                if (key.event == "Enter") {
                    document.getElementById("#btnAdd").click();
                }

            });

        function newGorev(event) {

            let taskInput = document.querySelector("#inputadd");
            if (taskInput.value == "") {
                alert("görev girmelisiniz");
            } else {
                gorevler.push({ "id": gorevler.length, "gorevAdi": taskInput.value });
                taskInput.value = "";
                Gorevlistesi();
            }
            event.preventDefault();
        }
        function deleteGorev (){
            
        }






    </script>
